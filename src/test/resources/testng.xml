<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="My Test Suite">


    <groups>
        <run>
            <include name="sanity"/>
            <exclude name="smoke"></exclude>
        </run>
    </groups>


    <parameter name="Browser" value="Chrome"></parameter>
    <parameter name="browsergroup1" value="IE"></parameter>


    <listeners>
        <listener class-name="listener.MyTestNgListener"></listener>
    </listeners>

    <suite-files>
        <suite-file path="suitea.xml"></suite-file>
        <suite-file path="suiteb.xml"></suite-file>
        <suite-file path="suitec.xml"></suite-file>
    </suite-files>
</suite>